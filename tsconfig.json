{
    "compilerOptions": {
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "inlineSourceMap": true,
        "module": "commonjs",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "build",
        "strict": true,
        "target": "es2015"
    },
    "files": ["gulpfile.ts"],
    "typedocOptions": {
        "exclude": "**/src/locales/**/*.ts",
        "excludeNotExported": true,
        "excludePrivate": true,
        "includes": "src/docs",
        "module": "commonjs",
        "name": "timecount API",
        "out": "docs",
        "readme": "src/docs/main.md",
        "target": "es2015"
    }
}