{
    "compilerOptions": {
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "inlineSourceMap": true,
        "lib": ["es6"],
        "module": "commonjs",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "build",
        "removeComments": true,
        "strict": true,
        "target": "es6",
        "types": ["node"]
    },
    "include": ["src/**/*.ts"],
    "typedocOptions": {
        "excludeExternals": true,
        "excludeNotExported": true,
        "excludePrivate": true,
        "mode": "file",
        "name": "API for \"timecount\"",
        "out": "docs"
    }
}